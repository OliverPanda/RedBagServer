{
  "name": "redbagserver",
  "version": "1.0.0",
  "description": "自动抢红包应用后端服务",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "start:dev": "NODE_ENV=development node ./bin/www",
    "start:test": "NODE_ENV=test node ./bin/www",
    "start:prod": "NODE_ENV=production node ./bin/www",
    "dev": "NODE_ENV=development nodemon ./bin/www",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:unit": "NODE_ENV=test jest --testPathPattern=unit",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
    "test:e2e": "NODE_ENV=test jest --testPathPattern=e2e",
    "docs": "node scripts/generate-api-docs.js",
    "docs:swagger": "echo \"访问 http://localhost:3000/api-docs 查看Swagger文档\"",
    "env:setup": "node scripts/setup-env.js",
    "env:setup:all": "node scripts/setup-env.js --all",
    "env:load": "node scripts/load-env.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.3.1",
    "express": "~4.16.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.6.3",
    "morgan": "~1.9.1",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3",
    "faker": "^6.6.6",
    "nock": "^13.3.0"
  },
  "keywords": [
    "redbag",
    "express",
    "api",
    "wechat",
    "alipay"
  ],
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testPathIgnorePatterns": ["<rootDir>/node_modules/"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/bin/**",
      "src/config/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "author": "Your Name",
  "license": "MIT"
}
