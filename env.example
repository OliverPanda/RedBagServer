# ========================================
# 红包服务器环境变量配置示例
# ========================================
# 复制此文件为 .env.local, .env.test, .env.production 等
# 并根据实际环境修改相应的值

# ========================================
# 基础环境配置
# ========================================
# 运行环境: development, test, production
NODE_ENV=development

# 服务器端口
PORT=3000

# ========================================
# 数据库配置
# ========================================
# MongoDB 连接字符串
MONGODB_URI=mongodb://localhost:27017/redbag

# MongoDB 连接选项
MONGODB_OPTIONS_USE_NEW_URL_PARSER=true
MONGODB_OPTIONS_USE_UNIFIED_TOPOLOGY=true

# ========================================
# Redis 配置
# ========================================
# Redis 连接字符串
REDIS_URL=redis://localhost:6379

# Redis 密码（如果有）
REDIS_PASSWORD=

# ========================================
# JWT 配置
# ========================================
# JWT 密钥（生产环境必须修改为强密钥）
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# JWT 过期时间（秒）
JWT_EXPIRES_IN=7200

# ========================================
# 短信服务配置
# ========================================
# 短信服务 API 密钥
SMS_API_KEY=your_sms_api_key

# 短信服务 API 密钥
SMS_API_SECRET=your_sms_api_secret

# ========================================
# 推送通知配置
# ========================================
# 推送通知密钥
PUSH_NOTIFICATION_KEY=your_push_key

# ========================================
# 文件上传配置
# ========================================
# 文件上传路径
UPLOAD_PATH=./uploads

# 最大文件大小（字节）
MAX_FILE_SIZE=5242880

# ========================================
# 限流配置
# ========================================
# 限流时间窗口（毫秒）
RATE_LIMIT_WINDOW_MS=900000

# 限流最大请求数
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# 日志配置
# ========================================
# 日志级别: error, warn, info, debug
LOG_LEVEL=info

# 日志文件路径
LOG_FILE_PATH=./logs

# ========================================
# 安全配置
# ========================================
# CORS 允许的域名（逗号分隔）
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# 会话密钥
SESSION_SECRET=your_session_secret_key

# ========================================
# 监控配置
# ========================================
# 是否启用健康检查
HEALTH_CHECK_ENABLED=true

# 健康检查端口
HEALTH_CHECK_PORT=3001

# ========================================
# 开发工具配置
# ========================================
# 是否启用 Swagger 文档
SWAGGER_ENABLED=true

# 是否启用调试模式
DEBUG=false
